{
  "checkers": ["typescript"],
  "disableTypeChecks": true,
  "htmlReporter": { "fileName": "reports/mutation/mutation-backend.html" },
  "ignorePatterns": [
    ".*",
    "coverage",
    "public",
    "reports",
    "seeds",
    "src/app/api/sentry/route.ts",
    "src/components",
    "src/presenters",
    "src/instrumentation.ts",
    "yarn.lock"
  ],
  "ignoreStatic": true,
  "logLevel": "info",
  "mutate": ["src/**/*.ts", "!src/**/*.test.ts"],
  "packageManager": "yarn",
  "reporters": ["html"],
  "testRunner": "vitest"
}
