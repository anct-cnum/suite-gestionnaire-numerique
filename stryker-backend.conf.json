{
  "checkers": ["typescript"],
  "disableTypeChecks": true,
  "htmlReporter": { "fileName": "reports/mutation/mutation-backend.html" },
  "ignorePatterns": [".*", "coverage", "public", "reports", "yarn.lock"],
  "ignoreStatic": true,
  "logLevel": "info",
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.test.ts"
  ],
  "packageManager": "yarn",
  "reporters": ["html"],
  "testRunner": "vitest"
}
