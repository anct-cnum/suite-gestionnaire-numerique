{
  "type": "module",
  "name": "suite-gestionnaire-numerique",
  "version": "0.1.0",
  "license": "AGPL-3.0",
  "scripts": {
    "bash:production": "scalingo -a suite-gestionnaire-numerique run bash",
    "build": "yarn prisma:migrate && yarn prisma:generate:fne && next build",
    "check": "yarn dedupe --check && yarn typecheck && yarn format:check && yarn lint:css && yarn lint:ts && yarn test:coverage",
    "db:start": "docker compose down && docker compose up -d && bash -c \"while ! docker compose logs | grep -q 'listening on IPv4 address'; do echo 'Waiting for database'; sleep 0.5; done\";",
    "deadcode": "knip",
    "depcheck": "depcheck",
    "dev": "yarn prisma:migrate && yarn prisma:generate:fne && next dev",
    "dotenv:test": "dotenv -e .env.test",
    "format": "prettier -w . \"!**/*.{js,jsx,mjs,mts,ts,tsx}\"",
    "format:check": "prettier -c . \"!**/*.{js,jsx,mjs,mts,ts,tsx}\"",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:ts": "eslint src seeds --ext .tsx,.ts --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
    "migration": "yarn migration:region && yarn migration:departement && yarn migration:groupement && yarn migration:structure && yarn migration:utilisateur",
    "migration:departement": "tsx seeds/departement.ts",
    "migration:groupement": "tsx seeds/groupement.ts",
    "migration:region": "tsx seeds/region.ts",
    "migration:structure": "tsx seeds/structure.ts",
    "migration:utilisateur": "tsx seeds/utilisateur.ts",
    "postinstall": "husky || true && ./post-install.sh",
    "prisma:generate:fne": "prisma generate --schema seeds/fne/schema.prisma",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset -f && yarn prisma:generate:fne",
    "psql:local": "docker compose up -d postgres-dev && docker exec -it sgn_db_dev psql -U sgn sgn",
    "psql:production": "scalingo -a suite-gestionnaire-numerique pgsql-console",
    "psql:test": "docker compose up -d postgres-test && docker exec -it sgn_db_test psql -U sgn sgn",
    "start": "next start",
    "test": "yarn dotenv:test -- yarn prisma:migrate && yarn dotenv:test -- vitest run",
    "test:coverage": "yarn test --coverage",
    "test:mutation:frontend": "yarn dotenv:test -- stryker run stryker-frontend.conf.json",
    "test:mutation:backend": "yarn dotenv:test -- stryker run stryker-backend.conf.json",
    "test:watch": "yarn dotenv:test -- vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@gouvfr/dsfr": "^1.12.1",
    "@prisma/client": "^5.19.1",
    "@sentry/nextjs": "^8",
    "mongodb": "^6.9.0",
    "next": "14.2.13",
    "next-auth": "^4.24.7",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^8.5.0",
    "@stryker-mutator/typescript-checker": "^8.5.0",
    "@stryker-mutator/vitest-runner": "^8.5.0",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^22.6.1",
    "@types/react": "^18.3.9",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-istanbul": "^2.1.1",
    "depcheck": "^1.4.7",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-unused-imports": "^3.2.0",
    "eslint-plugin-vitest": "^0.4.1",
    "husky": "^9.1.6",
    "jsdom": "^24.1.1",
    "knip": "^5.30.5",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1",
    "vitest-dom": "^0.1.1"
  },
  "engines": {
    "node": "20.14.0"
  },
  "packageManager": "yarn@4.2.2"
}
