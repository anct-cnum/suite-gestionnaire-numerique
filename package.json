{
  "name": "suite-gestionnaire-numerique",
  "version": "0.1.0",
  "license": "AGPL-3.0",
  "scripts": {
    "bash:production": "scalingo -a suite-gestionnaire-numerique run bash",
    "build": "yarn prisma:migrate && yarn prisma:generate:fne && next build",
    "check": "yarn dedupe --check && yarn typecheck && yarn lint:ts && yarn test:coverage",
    "db:start": "docker compose down && docker compose up -d && bash -c \"while ! docker compose logs | grep -q 'listening on IPv4 address'; do echo 'Waiting for database'; sleep 0.5; done\";",
    "deadcode": "knip",
    "depcheck": "depcheck",
    "dev": "yarn prisma:migrate && yarn prisma:generate:fne && next dev",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:ts": "eslint src seeds --ext .tsx,.ts --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
    "migration:utilisateur": "ts-node -T seeds/utilisateur.ts",
    "postinstall": "husky || true && ./post-install.sh",
    "prisma:drop:schema": "npx prisma db execute --file=prisma/dropSchema.sql",
    "prisma:generate:fne": "npx prisma generate --schema seeds/fne/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:reset": "yarn prisma:drop:schema && yarn prisma:migrate && yarn prisma:generate:fne",
    "psql:local": "docker compose up -d postgres-dev && docker exec -it sgn_db_dev psql -U sgn sgn",
    "psql:production": "scalingo -a suite-gestionnaire-numerique pgsql-console",
    "psql:test": "docker compose up -d postgres-test && docker exec -it sgn_db_test psql -U sgn sgn",
    "start": "next start",
    "test": "vitest run",
    "test:coverage": "yarn test --coverage",
    "test:mutation:frontend": "npx stryker run stryker-frontend.conf.json",
    "test:mutation:backend": "npx stryker run stryker-backend.conf.json",
    "test:watch": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@gouvfr/dsfr": "^1.12.1",
    "@prisma/client": "^5.18.0",
    "@sentry/nextjs": "^8",
    "mongodb": "^6.8.0",
    "next": "14.2.5",
    "next-auth": "^4.24.7",
    "react": "^18",
    "react-dom": "^18",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^8.5.0",
    "@stryker-mutator/typescript-checker": "^8.5.0",
    "@stryker-mutator/vitest-runner": "^8.5.0",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.2.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-istanbul": "^2.0.5",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-unused-imports": "^3.2.0",
    "eslint-plugin-vitest": "^0.4.1",
    "husky": "^9.1.4",
    "jsdom": "^24.1.1",
    "knip": "^5.27.1",
    "prisma": "^5.18.0",
    "stylelint": "^16.8.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5",
    "vitest-dom": "^0.1.1"
  },
  "engines": {
    "node": "20.14.0"
  },
  "packageManager": "yarn@4.2.2"
}
